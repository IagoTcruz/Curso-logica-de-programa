programa {
  funcao inicio() {
    inteiro numero_01, numero_02, numero_03
    real media_aritmetica

       escreva("Número 1: ")
       leia(numero_01)
       escreva("Número 2: ")
       leia(numero_02)
       escreva("Número 3: ")
